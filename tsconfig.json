{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es6",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noLib": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "typeRoots": ["./typescript/types"]
  },
  "include": ["./**/*"],
  "exclude": [
        "**/gpconv.d.ts",
        "**/gpconv_bg.wasm.d.ts"
    ]
}
